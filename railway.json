{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "startCommand": "python manage.py migrate && gunicorn AI_CashOrbit.wsgi:application --bind 0.0.0.0:${PORT:-8000}",
    "healthcheckPath": "/",
    "healthcheckTimeout": 300,
    "numReplicas": 1,
    "sleepApplication": false,
    "env": [
      {
        "name": "DJANGO_SETTINGS_MODULE",
        "value": "AI_CashOrbit.settings_production"
      },
      {
        "name": "DEBUG",
        "value": "False"
      },
      {
        "name": "ALLOWED_HOSTS",
        "value": "*,.railway.app"
      }
    ]
  }
}